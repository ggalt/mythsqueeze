<!-- ##################################
    Repeat Mode
     ##################################-->

<textarea name="RepeatMode">
    <area>850,600,400,30</area>
    <cutdown>yes</cutdown>
    <multiline>no</multiline>
    <align>left,vcenter</align>
    <font>basemedium</font>
    <value>Repeat:</value>
</textarea>


<!-- ##################################
    End of definition of MythSqueezeBox2 Window
     ##################################-->
    </window>

</mythuitheme>
