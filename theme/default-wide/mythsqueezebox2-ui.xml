<?xml version="1.0" encoding="utf-8"?>
<mythuitheme>

<!-- ##################################

  Wide Theme for MythSqueezeBox2 <baseres>1280x720</baseres>

     ##################################-->

    <window name="MythSqueezeBox2">


<textarea name="PlayerName">
    <area>10,10,1260,30</area>
    <cutdown>yes</cutdown>
    <multiline>no</multiline>
    <align>center,vcenter</align>
    <font>basemedium</font>
    <value>PlayerName:</value>
</textarea>


<!-- ##################################
    Background for SlimDisplay and Coverflow
     ##################################-->


<imagetype name="DisplayBackground">
    <area>10,60,1260,420</area>
    <gradient start="#999999" end="#333333" alpha="255" />
</imagetype>


<imagetype name="SqueezeDisplay">
    <filename>msb_images/NoMusic.png</filename>
    <area>20,70,1240,100</area>
</imagetype>

<!-- ##################################
    Uses the PictureFlow class to display a coverflow-like list of the
    album covers for the current playlist (kind of boring if you are
    just playing an album).  This updates as the playlist is played out.
     ##################################-->

<imagetype name="PlaylistCoverFlow">
    <filename>msb_images/NoMusic.png</filename>
    <area>20,180,1240,280</area>
</imagetype>

<!-- ##################################
    text about song attributes
     ##################################-->

<textarea name="SongTitle">
    <area>20,480,400,30</area>
    <cutdown>yes</cutdown>
    <multiline>no</multiline>
    <align>left,vcenter</align>
    <font>basemedium</font>
    <value>Title:</value>
</textarea>

<textarea name="SongAlbum">
    <area>440,480,400,30</area>
    <cutdown>yes</cutdown>
    <multiline>no</multiline>
    <align>left,vcenter</align>
    <font>basemedium</font>
    <value>Album:</value>
</textarea>

<textarea name="SongArtist">
    <area>850,480,400,30</area>
    <cutdown>yes</cutdown>
    <multiline>no</multiline>
    <align>left,vcenter</align>
    <font>basemedium</font>
    <value>Artist:</value>
</textarea>

<textarea name="SongGenre">
    <area>20,520,400,30</area>
    <cutdown>yes</cutdown>
    <multiline>no</multiline>
    <align>left,vcenter</align>
    <font>basemedium</font>
    <value>Genre:</value>
</textarea>

<textarea name="SongYear">
    <area>440,520,400,30</area>
    <cutdown>yes</cutdown>
    <multiline>no</multiline>
    <align>left,vcenter</align>
    <font>basemedium</font>
    <value>Year:</value>
</textarea>

<textarea name="SongDuration">
    <area>850,520,400,30</area>
    <cutdown>yes</cutdown>
    <multiline>no</multiline>
    <align>left,vcenter</align>
    <font>basemedium</font>
    <value>Duration:</value>
</textarea>

<!-- ##################################
    Next Song
     ##################################-->

<textarea name="NextSong">
    <area>20,560,1260,30</area>
    <cutdown>yes</cutdown>
    <multiline>no</multiline>
    <align>left,vcenter</align>
    <font>basemedium</font>
    <value>Up Next:</value>
</textarea>

<!-- ##################################
    Playing Mode
     ##################################-->

<textarea name="PlayMode">
    <area>20,600,400,30</area>
    <cutdown>yes</cutdown>
    <multiline>no</multiline>
    <align>left,vcenter</align>
    <font>basemedium</font>
    <value>Mode:</value>
</textarea>

<!-- ##################################
    Shuffle Mode
     ##################################-->

<textarea name="ShuffleMode">
    <area>440,600,400,30</area>
    <cutdown>yes</cutdown>
    <multiline>no</multiline>
    <align>left,vcenter</align>
    <font>basemedium</font>
    <value>Shuffle:</value>
